/* msg */

.msg-cell {
  margin-top: 3px;
  padding: 20rpx;
  background: white;
}

.msg-cell-head {
  display: flex;
  align-items: center;
  width: 100%;
}

.user-image {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background: white;
}

.user-name {
  font-size: 14px;
  color: #4f4f4f;
  margin-left: 6px;
  margin-bottom: 10px;
  overflow: hidden;
}

.time {
  display: block;
  font-size: 11px;
  margin-left: 6px;
}

.title-time {
  flex-direction: column;
  display: inline-block;
  margin-left: 14rpx;
  margin-top: 12rpx;
  vertical-align: middle;
  padding: 0;
  color: #454545;
}

.msg-text {
  margin-top: 16rpx;
}

.msg-image {
  margin-top: 16rpx;
}

/*底部工具条*/

.bottom {
  height: 85rpx;
  border-top: 1rpx solid #f8f7f7;
  overflow: hidden;
  background: white;
}

.bottom-item {
  display: inline-block;
  width: 33%;
  height: 100%;
  vertical-align: text-bottom;
  text-align: center;
  overflow: hidden;
}

.bottom-item-content {
  display: inline-block;
  height: 100%;
  color: #909090;
}

.bottom-item-content image {
  width: 45rpx;
  height: 100%;
  vertical-align: middle;
  margin-right: 10rpx;
}

.bottom-item-content text {
  font-size: 12px;
  vertical-align: middle;
  margin-top: 10rpx;
  display: inline-block;
}

.bottom-item-pressed-text {
  color: red;
}
